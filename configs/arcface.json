{
    "train": {
        "loss": "ArcFace", 
        "backbone": "vit-face",
        "use_pretrained": false,
        "pretrained_backbone_path": "./weights/insight_irse50_backbone.pth",
        "root_dir": "./data/datav3",
        "num_worker": 8,
        "freeze_model": true,
        "batch_size_train": 64,
        "batch_size_val": 64,
        "n_epochs": 50,
        "use_sam_optim": false,
        "sam_optim":
        {
            "momentum": 0.9,
            "rho": 0.05,
            "adaptive": false
        },
        "scheduler":
        {
            "name": "StepLR",                                                                                                                                                                                 
            "step_size": 8,
            "gamma": 0.7,
            "verbose": false
        },
        "use_lamb_optim": false,
        "learning_rate": 1e-4,
        "prefix": "arcface",
        "save_model": false,
        "verbose": 1
    },
    "test": {
        "trainset_path": "./data/datav2",
        "testset_path": "./data/datav2",
        "backbone": "mobilenet",
        "pretrained_model_path": "./logs/20211215/arcface_mobilenet.pth",
        "num_worker": 8,
        "batch_size": 32
    }
}